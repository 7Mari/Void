#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <string.h>

void titulo(){
    printf("\t \n---Par ou Ímpar---\n");
}

void par(int numero){ 

    if (numero % 2 == 0)
    {
        printf("\n %d -> par. \n" ,numero);
    } 
}

void impar(int numero){

    if (numero %  2 != 0)
    {
        printf("\n %d -> impar. \n" ,numero);
    }
    
}


int main(){
    int numero;

    printf("\nDigite um número: \n");
    scanf("%d" ,&numero);
    system("cls || clear");
titulo();

printf("Número escolhido: %d" ,numero);
par(numero);
impar(numero);


    



    return 0;
}
